<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_music_name"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="you are beautiful"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textColor="#4e4c4c"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#c6c3c3"
        android:layout_height="0.01dp"></LinearLayout>
<LinearLayout
    android:id="@+id/dialog_del_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="35dp"
        android:layout_gravity="center"
        android:src="@mipmap/action_button_delete_normal_light"
        android:layout_height="35dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="删除"
        android:textColor="@color/textdefualtcolor"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:textSize="16sp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#c6c3c3"
        android:layout_height="0.01dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_share_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:src="@mipmap/action_button_send_normal_light"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="分享"
            android:textColor="@color/textdefualtcolor"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#c6c3c3"
        android:layout_height="0.01dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_collect_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:src="@drawable/action_button_favorite_light_n"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="收藏"
            android:textColor="@color/textdefualtcolor"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#c6c3c3"
        android:layout_height="0.01dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_down_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:src="@mipmap/radar_download_normal"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="下载"
            android:textColor="@color/textdefualtcolor"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#c6c3c3"
        android:layout_height="0.01dp"></LinearLayout>
</LinearLayout>
