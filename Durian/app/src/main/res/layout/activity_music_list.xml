<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/all_head"
    android:layout_width="match_parent"
    android:paddingTop="30dp"
    android:paddingRight="15dp"
    android:paddingLeft="18dp"
    android:background="@drawable/test_bg_head"
    android:layout_height="210dp">
        <LinearLayout
            android:id="@+id/music_list_back_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="17dp"
            android:layout_gravity="center"
            android:src="@drawable/home_as_up_large_p"
            android:layout_height="17dp" />
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="音乐库"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/music_list_search_iv"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/h_search_icon_n"/>
    <RelativeLayout
        android:id="@+id/music_list_playing_head"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/music_list_back_ly"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="100dp"
            android:elevation="11dp"
            android:id="@+id/head"
            android:background="#FFFFFF"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/music_list_music_head_iv"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_song_head_bg"
                android:layout_height="100dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="200dp"
            android:id="@+id/music_list_head_song_name_tv"
            android:paddingLeft="15dp"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:lines="2"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:text="Ke.Ha - Tik Tok"
            android:layout_marginTop="15dp"
    android:layout_toRightOf="@+id/head"
    android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="5dp"
            android:layout_width="200dp"
            android:paddingLeft="15dp"
            android:textColor="#e7e6e6"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/music_head_music_detail"
            android:layout_alignLeft="@+id/music_list_head_song_name_tv"
            android:layout_below="@+id/music_list_head_song_name_tv"
            android:text="Promo Only Mainstream Radio October"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/music_play_wave"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_width="25dp"
            android:src="@drawable/wave"
            android:layout_height="25dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/music_head_music_detail"
            android:layout_alignLeft="@+id/music_head_music_detail"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/music_list_head_song_name_playing_iv"
            android:layout_width="32dp"
            android:src="@drawable/nowplaying_pause_n"
            android:layout_height="32dp" />
        <ImageView
            android:id="@+id/music_list_head_song_name_next_iv"
            android:layout_toRightOf="@+id/music_list_head_song_name_playing_iv"
            android:layout_width="32dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/nowplaying_next_n"
            android:layout_height="32dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
    <LinearLayout
        android:id="@+id/second_head"

        android:layout_below="@+id/all_head"
        android:background="@color/bottomPlaybar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:background="@drawable/linear_layout_stroke"
    android:gravity="center"
    android:id="@+id/lyCollect"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="30dp"
        android:src="@drawable/action_button_favorite_light_n"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="收藏"
        android:paddingLeft="3dp"
        android:textColor="#787878"
        android:layout_height="wrap_content" />
</LinearLayout>
        <LinearLayout
            android:id="@+id/music_list_share"
            android:background="@drawable/linear_layout_stroke"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/action_button_send_normal_light"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="分享"
                android:paddingLeft="3dp"
                android:textColor="#787878"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/linear_layout_stroke"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/lyDelete"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/radar_download_normal"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="下载"
                android:paddingLeft="3dp"
                android:textColor="#787878"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_below="@+id/second_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="17dp"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:paddingRight="17dp"
        android:scrollbars="none"
        android:paddingBottom="20dp"
        android:id="@+id/music_list_view">
    </ListView>
</RelativeLayout>
