<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="33dp"
    android:paddingRight="33dp"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fragment_music_play_album"
        android:layout_width="match_parent"
        android:src="@drawable/test_song_head_bg"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/fragment_music_play_bottom_btns"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/fragment_music_play_bottom_btns"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/tool_download_n"
            android:layout_centerInParent="true"
            android:layout_height="28dp" />
        </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/tool_share_n"
            android:layout_centerInParent="true"
            android:layout_height="28dp" />
        </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/tool_repeat_all_n"
            android:layout_centerInParent="true"
            android:layout_height="28dp" />
        </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/tool_airkan_s"
            android:layout_centerInParent="true"
            android:layout_height="28dp" />
        </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/tool_more_n"
            android:layout_centerInParent="true"
            android:layout_height="28dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
