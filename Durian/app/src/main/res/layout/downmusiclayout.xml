<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="match_parent" >
  <RelativeLayout
      android:id="@+id/downtitle"
      android:background="#EEF0EF"
      android:layout_height="60dp"
      android:layout_width="match_parent"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="下载管理"
          android:textStyle="bold"
          android:textColor="#000000"
          android:textSize="22dp"
          android:layout_marginTop="25dp"
          />
  </RelativeLayout>
  <TextView
      android:id="@+id/downtext"
      android:text="下载中"
      android:layout_below="@id/downtitle"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15dp"
      android:textColor="#8C8C8C"
      />
    <LinearLayout
        android:id="@+id/downline1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E4E4E4"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/downtext"
        android:layout_marginTop="15dp"
        />
     <ListView
         android:id="@+id/downlist"
         android:layout_marginTop="1dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/downline1"
         android:scrollbars="none"
         android:dividerHeight="0dp"
         android:divider="#00000000"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         />
    <TextView
        android:id="@+id/downlatertext"
        android:text="已下载"
        android:layout_below="@id/downlist"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#8C8C8C"
        />
    <LinearLayout
        android:id="@+id/downline2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E4E4E4"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/downlatertext"
        android:layout_marginTop="15dp"
        />
    <ListView
        android:id="@+id/downlaterlist"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downline2"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
</RelativeLayout>