<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bottomPlaybar"
        android:layout_height="27dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bottomPlaybar"
        android:layout_height="46dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp">
                <LinearLayout
                    android:background="@drawable/border"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/search_gray"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <EditText

                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:id="@+id/editText2"
                            android:background="#00ffffff"
                            android:textSize="12sp"
                            android:textColor="#8c8484"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:hint="      歌手、歌曲名、专辑">

                        </EditText>

                    </RelativeLayout>
                    <ImageView
                        android:src="@drawable/cha"
                        android:layout_gravity="center_vertical"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9d9d9">

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="40dp">
        <TextView
            android:text="热门搜索"
            android:textColor="#ffff323e"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimaryDark">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/linone">
        <TextView
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:textColor="#686060"
            android:text="鹿晗"
            android:gravity="center"

            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/backgroundthree" />
        <TextView
        android:layout_width="48dp"
        android:layout_height="30dp"
            android:textSize="13sp"
            android:textColor="#686060"
        android:text="庄心妍"
        android:gravity="center"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/backgroundtwo" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="忘了去记得"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="突然好想你"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView13"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backgroundthree" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:id="@+id/lintwo">
        <TextView
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:text="薛之谦"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/backgroundtwo" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"

            android:text="Uptown Funk"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backgroundthree" />
        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"

            android:text="I Believe"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:id="@+id/linthree">
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="权志龙G—dragon"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView17"
            android:background="@drawable/backgroundtwo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="21dp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="大王叫我来巡山"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView16"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backgroundthree" />
        <TextView
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:text="虫儿飞"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686060"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background" />

    </LinearLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="40dp">
        <TextView
            android:text="历史搜索"
            android:textColor="#ffff323e"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimaryDark">
    </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
    </LinearLayout>



</LinearLayout>