<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/bottomPlaybar"

        android:id="@+id/umtitle"
        android:layout_width="match_parent"

        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/umre"
            android:layout_marginLeft="10dp"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="37dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView

            android:layout_width="15dp"
            android:layout_height="20dp"

            android:src="@mipmap/umreturn"
            />
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:id="@+id/ummaintext"
            android:layout_marginTop="37dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orangecolor"
            android:textSize="16sp"
            android:text="我的Durian"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#c7c3c3"
    android:layout_height="0.1dp">

</LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/usermanager"
        android:layout_below="@id/umtitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        >
        <ImageView
            android:id="@+id/umicon"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/my_head"
            />
        <TextView
            android:id="@+id/umusertext"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蔡 何"
            android:textStyle="bold"
            android:layout_below="@id/umicon"
            android:textSize="18dp"
            android:textColor="@color/textdefualtcolor"


            />
        <ImageView
            android:id="@+id/umlvicon"
            android:layout_width="25dp"

            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/umusertext"
            android:src="@mipmap/vipstar"
            android:layout_below="@id/umicon"
            />
        <TextView
            android:id="@+id/umnumber"
            android:gravity="center"
            android:layout_below="@id/umusertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#c9c5c5"
            android:text="18161167791"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/umitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/umnumber"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            android:textColor="#9F9F9F"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:text=""
            />
        <LinearLayout
            android:id="@+id/umline1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/umitem"
            android:background="@color/colorPrimaryDark"
            />
        <ImageView
            android:id="@+id/umlv1"
            android:layout_alignLeft="@id/umline1"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/umline1"
            android:src="@mipmap/item2"
            />
        <TextView
            android:id="@+id/umitemt1ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/umlv1"
            android:text="修改信息"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#7b7777"

            android:layout_below="@id/umline1"
            android:layout_marginTop="23dp"

            />
        <ImageView
            android:id="@+id/umimageView1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/arrow_right_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/umline1"
            />
        <TextView
            android:id="@+id/umitemt2ext"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/umimageView1"
            android:text="进入修改"
            android:layout_below="@id/umline1"
            android:textSize="12dp"
            android:textColor="#9F9F9F"
            />






        <ImageView
            android:id="@+id/umlv2"
            android:layout_alignLeft="@id/umline1"
            android:layout_marginTop="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/umlv1"
            android:src="@mipmap/item3"
            />
        <TextView
            android:id="@+id/umitemt3ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/umlv1"
            android:text="密码管理"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#7b7777"

            android:layout_below="@id/umlv1"
            android:layout_marginTop="33dp"

            />
        <ImageView
            android:id="@+id/umimageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/arrow_right_normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/umlv1"
            />
        <TextView
            android:id="@+id/umitemt4ext"
            android:layout_marginTop="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/umimageView2"
            android:text="进入修改"
            android:layout_below="@id/umlv1"
            android:textSize="12dp"
            android:textColor="#9F9F9F"
            />

        <LinearLayout
            android:id="@+id/umline2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/umlv2"
            android:background="@color/colorPrimaryDark"
            />
       <TextView
           android:layout_width="match_parent"
            android:paddingTop="12dp"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="40dp"
           android:layout_marginLeft="45dp"
           android:layout_marginRight="45dp"
           android:text="退出登录"
           android:gravity="center"
           android:textSize="20sp"
           android:textColor="#fcf9f9"
           android:background="@drawable/exit_btn_corners_bg"
           android:paddingBottom="12dp"
           android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
