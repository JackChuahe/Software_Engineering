<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:background="#d9d9dc"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/imageButton2"
            android:src="@mipmap/action_bar_back_normal_light"
            android:background="@null"
            android:layout_weight="0.14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="注册Durian账号"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_weight="1.08"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="本机号码注册"
        android:id="@+id/textView3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="#8a8a8a"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:src="@mipmap/dian"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/button2"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#66cd00"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="注册会发送一条短信，资费由运营商收取"
        android:id="@+id/textView6"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:textColor="#8a8a8a"
        android:textSize="15dp"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同意账号的用户协议和隐私政策"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="68dp"
        android:checked="true"
        android:textColor="#8a8a8a"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
