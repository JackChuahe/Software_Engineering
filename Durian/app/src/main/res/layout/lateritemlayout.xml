<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/ladire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="8dp"
        >
        <ImageView
            android:id="@+id/ladiimage"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_music"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/laditext1"
        android:ellipsize="middle"
        android:layout_width="180dp"
        android:layout_height="17dp"
        android:layout_toRightOf="@+id/ladire"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="红玫瑰"
        android:textSize="15dp"
        android:textColor="#000000"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/laditext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.7MB"
        android:layout_alignLeft="@id/laditext1"
        android:layout_below="@id/laditext1"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        />



    <TextView
        android:id="@+id/laditext6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已下载"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_alignBottom="@id/ditext3"
        android:textSize="15dp"
        android:textColor="#8c8888"
        />
    <LinearLayout
        android:layout_below="@id/ladire"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:orientation="horizontal"
        android:background="#ded8d8"
        />
</RelativeLayout>
