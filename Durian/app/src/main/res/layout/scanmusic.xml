<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/scanTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0291FF"
        >
        <ImageView
            android:id="@+id/screturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/aj9"
            />
        <TextView
            android:id="@+id/scanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描歌曲"
            android:textSize="23dp"
            android:layout_centerInParent="true"

            android:layout_marginTop="23dp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/scbak"
        android:layout_below="@id/scanTitle"
        android:layout_marginTop="80dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/scanbk"
        />
    <ImageView
        android:id="@+id/scbak1"
        android:layout_below="@id/scanTitle"
        android:layout_marginTop="80dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/scbks"
        />

    <TextView
        android:id="@+id/songpath"
        android:layout_below="@+id/scbak"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在扫描："
        />
    <TextView
        android:id="@+id/isplay"
        android:ellipsize="start"
        android:layout_width="120dp"
        android:layout_height="13dp"
        android:layout_toRightOf="@+id/songpath"
        android:layout_alignBottom="@+id/songpath"
        android:layout_marginBottom="5dp"
        android:text="/mnt/sdcard/gvvrvre00890"
        android:textSize="10dp"
        android:singleLine="true"
        />
    <TextView
    android:id="@+id/songnumber"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignBottom="@+id/textleft"
    android:layout_marginBottom="-5dp"
    android:text="0"
    android:textSize="25dp"
    android:textColor="#0291FF"
    />
    <TextView
        android:id="@+id/textleft"
        android:layout_below="@+id/scbak"
        android:layout_toLeftOf="@+id/songnumber"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经扫描到"
        android:textColor="#6e6565"
        />

    <TextView
        android:id="@+id/textright"
        android:layout_below="@+id/scbak"
        android:layout_toRightOf="@id/songnumber"
        android:layout_marginTop="80dp"
        android:textColor="#FF6E6565"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首歌曲"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_below="@+id/scbak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@color/btn_up"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="开始扫描" />
    <TextView
        android:id="@+id/startscanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scbak"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="一键点击扫描歌曲"
        />
    <CheckBox
        android:id="@+id/sccheck"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不扫描60秒以下歌曲"
        android:textColor="#6e6565"
        android:textSize="12dp"
        />
</RelativeLayout>
